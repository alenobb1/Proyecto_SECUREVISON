@{
    Layout = null;
    string errorpago = "no";
    if (ViewBag.ErrorPago != null)
    {
        errorpago = "si";
    }
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-k4zH9Uq5Rf/B2V25Tg4D71aSvVb9Q64gXHhH/Ip5d7G6AXzzx8m6Y3T8W7a5zNxETCrtnyeNUk63KxE8VmGuYg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Roboto', sans-serif;
        }

        .row {
            height: 100%;
        }

        .bg {
            background-image: url(https://img.freepik.com/fotos-premium/nave-espacial-cohete-dibujos-animados-despegando_980225-2094.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            height: 100%;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .login-form {
            background: rgba(255, 255, 255, 0.9);
            padding: 1.5rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            width: 400px;
            height: 550px;
            overflow: hidden;
        }

            .login-form h2 {
                font-weight: 600;
                color: #333;
            }

        .btn-primary {
            background-color: #007aff;
            border-color: #007aff;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #005bb5;
                border-color: #005bb5;
            }

        .social-icons {
            text-align: center;
            margin-top: 15px;
        }

            .social-icons a {
                margin: 0 5px;
            }

        .whatsapp-icon {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background-color: #25D366;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            cursor: pointer;
        }

            .whatsapp-icon i {
                color: white;
                font-size: 1.5rem;
            }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-6">
            <div class="container login-container">
                <div class="login-form">
                    <h2 class="text-center">Iniciar Sesión</h2>
                    <form asp-controller="Home" asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="username">Nombre de Usuario:</label>
                            <input type="text" id="username" name="username" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña:</label>
                            <input type="password" id="password" name="password" class="form-control" required />
                        </div>
                        <div class="form-group form-check form-check-inline">
                            <input type="checkbox" id="rememberMe" name="rememberMe" class="form-check-input" />
                            <label class="form-check-label" for="rememberMe">Recordarme</label>
                        </div>
                        <div class="form-group form-check form-check-inline">
                            <a href="/Home/RecuperarContrasena" class="btn btn-link">¿Olvidaste tu contraseña?</a>
                        </div>
                        <div class="form-group">
                            <div class="g-recaptcha" data-sitekey="6Le01mwqAAAAABMYDRqe69-3d0Og4cWv1Roqt7jU"></div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
                    </form>
                    <div class="social-icons">
                        <p>Iniciar sesión con:</p>
                        <a href="#" class="btn btn-outline-primary btn-sm"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-danger btn-sm"><i class="fab fa-google"></i></a>
                        <a href="#" class="btn btn-outline-info btn-sm"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 bg"></div>
    </div>

    <!-- Icono de WhatsApp -->
    <a href="https://api.whatsapp.com/send?phone=50250861458" class="whatsapp-icon" target="_blank">
        <i class="fab fa-whatsapp"></i>
    </a>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        if ('@errorpago' == "si") {
            Swal.fire({
                title: "",
                text: "Paga tu cuenta",
                icon: "error"
            });
        }
    </script>
</body>
</html>
