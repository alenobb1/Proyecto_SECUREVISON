@model FarmaciaAlejandro.Models.DepartamentoFarmacia

<h2>Editar Departamento de Farmacia</h2>

<form method="post" action="@Url.Action("EditarDepartamento", "Home")">
    <div class="form-group">
        <input type="hidden" id="IDDepartamento" name="IDDepartamento" value="@Html.Raw(Model.IDDepartamento)" class="form-control" />

        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" value="@Html.Raw(Model.Nombre)" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripción:</label>
        <input type="text" id="Descripcion" name="Descripcion" value="@Html.Raw(Model.Descripcion)" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>
