@model List<VentaFarmacia>

<div class="container">
    <h1>Ventas de la Farmacia</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>ID de Venta</th>
                <th>ID de Cliente</th>
                <th>Fecha</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venta in Model)
            {
                <tr>
                    <td>@venta.IdVentaFarmacia</td>
                    <td>@venta.IdClienteFarmacia</td>
                    <td>@venta.Fecha.ToShortDateString()</td>
                    <td>@venta.Total.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
