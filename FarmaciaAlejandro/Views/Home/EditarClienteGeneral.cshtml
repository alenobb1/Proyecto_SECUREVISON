
<div class="container">
    <h1>Clientes</h1>


    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Acciones</th> <!-- Nueva columna para el botón de eliminar -->
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Idcliente</td>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Apellido</td>
                    <td>@cliente.Direccion</td>
                    <td>@cliente.Telefono</td>
                    <td>@cliente.Email</td>
                    <td>
                        <form method="get" action="@Url.Action("EditarCliente", "Home", new { id = cliente.Idcliente })">
                            <button type="submit">Editar</button>
                        </form>
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>

